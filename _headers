# Security Headers Configuration untuk Netlify/Vercel
# Copy file ini ke root sebagai _headers (Netlify) atau vercel.json (Vercel)

/*
  # Security Headers
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=()
  
  # HTTPS
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  
  # Content Security Policy (adjust as needed)
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://fonts.googleapis.com https://kit.fontawesome.com https://www.googletagmanager.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com data:; img-src 'self' data: https:; connect-src 'self' https://www.google-analytics.com; frame-src 'self' https://www.google.com;
  
  # Cache Control
  Cache-Control: public, max-age=31536000, immutable

# Untuk file statis
/static/*
  Cache-Control: public, max-age=31536000, immutable

# Untuk HTML files
/*.html
  Cache-Control: public, max-age=0, must-revalidate
